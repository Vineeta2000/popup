<h1>New Post</h1>

<%= form_with model: @post , url: posts_path , method: :post do |form| %>
	<div>
		<%= form.label :caption %>
		<%= form.text_field :caption %>
	</div>
	<div>
		<%= form.label :picture%>
		<%= form.file_field :picture, multiple: true%>
	</div>

	<div>
		<%= form.submit "create post" %>
	</div>

	<% end %>
	<%= link_to "Back", root_path %>