<div class= "comment_lists">
	<%#= image_tag "logo/download.png" %>
	<% @comments.reverse.each do |comment| %>
	<li>
		<tr>
			<td><%= comment.feedback %></td>
			<% if comment.user == current_user || current_user.role.eql?("Admin") || @post.user == current_user %>
			<td><button><%= link_to "Delete" , destroy_comment_posts_path(user_id: current_user.id , post_id: @post.id , comment_id: comment.id) , method: :delete , remote: true %></button></td>
			<% end %>

			

			<div id = "like_<%= comment.id %>">
			<%= render "like", comment: comment  %>
			</div>
		</tr>
		<br><br>
	</li>
	<% end %>
</div>
