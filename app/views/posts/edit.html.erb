<h1>Edit Post</h1>
<%= form_with model: @post, url: post_path(post_id: @post.id) , method: :put do |form|%>

<p>

<%= form.label :Caption %>
<%= form.text_field :caption %>
</p>
<div>
	<%= form.label :picture%>
	<%= form.file_field :picture , multiple: true%>
</div>

<p>
<%= form.submit"update"%>
</p>
<%end%>
<%= link_to "back" , root_path %>

